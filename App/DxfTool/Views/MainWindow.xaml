<Window x:Class="DxfTool.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DxfTool.Views"
        mc:Ignorable="d"
        Title="Narzędzia DXF - Edycja Profesjonalna" 
        Height="750" 
        Width="750"
        MinHeight="540"
        MinWidth="650"
        WindowStartupLocation="CenterScreen"
        Background="#F8FAFC">
    
    <Window.Resources>
        <!-- Enhanced Color Palette -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#1E40AF"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#3B82F6"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#10B981"/>
        <SolidColorBrush x:Key="CardBrush" Color="White"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextBrush" Color="#1F2937"/>
        <SolidColorBrush x:Key="LightTextBrush" Color="#6B7280"/>
        
        <!-- Modern Card Style -->
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#00000015" BlurRadius="8" ShadowDepth="2" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Premium Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="4,6,0,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="MinHeight" Value="34"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <Border.Effect>
                                <DropShadowEffect Color="#00000020" BlurRadius="6" ShadowDepth="2" Opacity="0.2"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#60A5FA"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00000030" BlurRadius="16" ShadowDepth="6" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="-2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2563EB"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00000020" BlurRadius="8" ShadowDepth="2" Opacity="0.25"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Success Button -->
        <Style x:Key="SuccessButton" BasedOn="{StaticResource ModernButton}" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="0,12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#34D399"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Modern TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="6,6,4,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="MinHeight" Value="34"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <Border.Effect>
                                <DropShadowEffect Color="#00000008" BlurRadius="6" ShadowDepth="2" Opacity="0.15"/>
                            </Border.Effect>
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource SecondaryBrush}"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#3B82F620" BlurRadius="12" ShadowDepth="3" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern Label -->
        <Style x:Key="ModernLabel" TargetType="Label">
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,6,6,6"/>
        </Style>
        
        <!-- Section Header -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header Section -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="20,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Main Header -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="📐" FontSize="28" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Narzędzia DXF Professional" FontSize="20" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Wyszukiwarka Punktów Wysokościowych i Ekstraktor Współrzędnych GPS" FontSize="12" Foreground="#93C5FD"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Update Section -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" 
                           Margin="0,8,0,0" Visibility="{Binding UpdateMessage, Converter={x:Static local:StringToVisibilityConverter.Instance}}">
                    <TextBlock Text="🔄" FontSize="14" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBlock Text="{Binding UpdateMessage}" FontSize="12" Foreground="#93C5FD" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Button Content="Zainstaluj Aktualizację" 
                            Command="{Binding InstallUpdateCommand}"
                            Visibility="{Binding UpdateAvailable, Converter={x:Static local:BooleanToVisibilityConverter.Instance}}"
                            FontSize="10" 
                            Padding="8,2"
                            Background="#10B981"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="15">
            <StackPanel MaxWidth="750">

                <!-- Data Type Selection Card -->
                <Border Style="{StaticResource ModernCard}">
                    <StackPanel>
                        <TextBlock Text="🎯 Ustawienia Ekstrakcji Danych" Style="{StaticResource SectionHeader}"/>
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="110"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Data Type Selection -->
                            <Label Grid.Row="0" Grid.Column="0" 
                                   Content="📊 Typ Danych:" 
                                   Style="{StaticResource ModernLabel}"/>
                            
                            <ComboBox Grid.Row="0" Grid.Column="1"
                                      Name="cmbDataType"
                                      ItemsSource="{Binding DataExtractionTypes}"
                                      SelectedItem="{Binding SelectedDataType, UpdateSourceTrigger=PropertyChanged}"
                                      Margin="6,6,4,6"
                                      FontSize="13"
                                      MinHeight="34"
                                      Background="White"
                                      BorderBrush="{StaticResource BorderBrush}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Converter={x:Static local:DataTypeToIconConverter.Instance}}" 
                                                       FontSize="14" 
                                                       VerticalAlignment="Center" 
                                                       Margin="0,0,8,0"/>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Converter={x:Static local:DataTypeToDisplayNameConverter.Instance}}" 
                                                           FontWeight="Medium"/>
                                                <TextBlock Text="{Binding Converter={x:Static local:DataTypeToDescriptionConverter.Instance}}" 
                                                           FontSize="11" 
                                                           Foreground="{StaticResource LightTextBrush}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            
                            <Button Grid.Row="0" Grid.Column="2" 
                                Content="Rozpocznij" 
                                    Command="{Binding ProcessFileCommand}"
                                    Style="{StaticResource SuccessButton}"
                                    HorizontalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- File Selection Card -->
                <Border Style="{StaticResource ModernCard}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="📁 Wybór Pliku" Style="{StaticResource SectionHeader}"/>
                        </StackPanel>
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="145"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Source File -->
                            <Label Grid.Row="0" Grid.Column="0" 
                                   Content="📄 Plik Źródłowy DXF:" 
                                   Style="{StaticResource ModernLabel}"/>
                            
                            <TextBox Grid.Row="0" Grid.Column="1" 
                                     Name="txtDxfFilePath"
                                     Text="{Binding DxfFilePath, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource ModernTextBox}"
                                     IsReadOnly="True"
                                     Background="#F8FAFC"/>
                            
                            <Button Grid.Row="0" Grid.Column="2" 
                                    Content="Wybierz" 
                                    Command="{Binding BrowseDxfFileCommand}"
                                    Style="{StaticResource ModernButton}"
                                    HorizontalAlignment="Stretch"/>

                            <!-- SoundPlan File - only visible for GeometryPoints -->
                            <Label Grid.Row="2" Grid.Column="0" 
                                   Content="🔊 Plik SoundPlan:" 
                                   Style="{StaticResource ModernLabel}"
                                   Visibility="{Binding SelectedDataType, Converter={x:Static local:GeometryPointsVisibilityConverter.Instance}}"/>
                            
                            <TextBox Grid.Row="2" Grid.Column="1" 
                                     Name="txtSoundPlanFilePath"
                                     Text="{Binding SoundPlanFilePath, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource ModernTextBox}"
                                     IsReadOnly="True"
                                     Background="#F8FAFC"
                                     Visibility="{Binding SelectedDataType, Converter={x:Static local:GeometryPointsVisibilityConverter.Instance}}"/>
                            
                            <Button Grid.Row="2" Grid.Column="2" 
                                    Content="Wybierz" 
                                    Command="{Binding BrowseSoundPlanFileCommand}"
                                    Style="{StaticResource ModernButton}"
                                    HorizontalAlignment="Stretch"
                                    Visibility="{Binding SelectedDataType, Converter={x:Static local:GeometryPointsVisibilityConverter.Instance}}"/>

                            <!-- Final Table CSV File - only visible for GeometryPoints -->
                            <Label Grid.Row="4" Grid.Column="0" 
                                   Content="📊 Plik CSV Tabeli:" 
                                   Style="{StaticResource ModernLabel}"
                                   Visibility="{Binding SelectedDataType, Converter={x:Static local:GeometryPointsVisibilityConverter.Instance}}"/>
                            
                            <TextBox Grid.Row="4" Grid.Column="1" 
                                     Name="txtFinalTableCsvFilePath"
                                     Text="{Binding FinalTableCsvFilePath, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource ModernTextBox}"
                                     IsReadOnly="True"
                                     Background="#F8FAFC"
                                     Visibility="{Binding SelectedDataType, Converter={x:Static local:GeometryPointsVisibilityConverter.Instance}}"/>
                            
                            <Button Grid.Row="4" Grid.Column="2" 
                                    Content="Wybierz" 
                                    Command="{Binding BrowseFinalTableCsvFileCommand}"
                                    Style="{StaticResource ModernButton}"
                                    HorizontalAlignment="Stretch"
                                    Visibility="{Binding SelectedDataType, Converter={x:Static local:GeometryPointsVisibilityConverter.Instance}}"/>

                            <!-- Output File -->
                            <Label Grid.Row="6" Grid.Column="0" 
                                   Content="💾 Plik Wyjściowy:" 
                                   Style="{StaticResource ModernLabel}"/>
                            
                            <TextBox Grid.Row="6" Grid.Column="1" 
                                     Name="txtDestinationFilePath"
                                     Text="{Binding DestinationFilePath, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource ModernTextBox}"
                                     IsReadOnly="True"
                                     Background="#F8FAFC"/>
                            
                            <Button Grid.Row="6" Grid.Column="2" 
                                    Content="Wybierz" 
                                    Command="{Binding BrowseDestinationFileCommand}"
                                    Style="{StaticResource ModernButton}"
                                    HorizontalAlignment="Stretch"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Results Card -->
                <Border Style="{StaticResource ModernCard}">
                    <StackPanel>
                        <TextBlock Text="{Binding StatusMessage}" 
                                           FontSize="13" 
                                           FontWeight="Medium"
                                           Foreground="{StaticResource TextBrush}"/>
                        <TextBlock Text="📈 Wyniki Przetwarzania" Style="{StaticResource SectionHeader}"/>
                        
                        <Border Background="#FAFBFC" 
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1" 
                                CornerRadius="6"
                                MinHeight="100">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                        HorizontalScrollBarVisibility="Auto"
                                        Padding="10">
                                <TextBlock Text="{Binding ResultsText}" 
                                           FontFamily="Cascadia Code, Consolas, Monaco, 'Courier New', monospace"
                                           FontSize="12"
                                           Foreground="{StaticResource TextBrush}"
                                           TextWrapping="Wrap"
                                           LineHeight="16"/>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
